@page "/Account"
@model OficialSliwa.Pages.AccountModel
@{
    ViewData["Title"] = "Konto";
}

<h2 class="page-title">Moje Konto</h2>

<div class="admin-dashboard">
    <div class="dashboard-card card-members">
        <a asp-page="/Account/Participants" class="card-link">
            <div class="card-content">
                <h3 class="card-title">Lista członków</h3>
                <p class="card-description">Zarządzaj listą członków, przeglądaj i edytuj dane.</p>
            </div>
        </a>
    </div>

    <div class="dashboard-card card-trainers">
        <a asp-page="/Trainers" class="card-link">
            <div class="card-content">
                <h3 class="card-title">Lista Trenerów</h3>
                <p class="card-description">Przeglądaj listę dostępnych trenerów.</p>
            </div>
        </a>
    </div>

    <div class="dashboard-card card-reports">
        <a asp-page="/Account/Raporty" class="card-link">
            <div class="card-content">
                <h3 class="card-title">Raporty</h3>
                <p class="card-description">Przeglądaj raporty</p>
            </div>
        </a>
    </div>
</div>

<style>
    body {
		font-family: Arial, sans-serif;
		background-color: green;
	}

    /* Page Title */
    .page-title {
        font-size: 2.2rem;
        text-align: center;
        margin-bottom: 40px;
        color: #333;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Dashboard Layout */
    .admin-dashboard {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
        padding: 0 20px;
        justify-items: center;
    }

    /* Dashboard Card */
    .dashboard-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        border: 1px solid #e0e0e0;
        padding: 20px;
        text-align: center;
        width: 100%; /* Ensure full width within the grid */
        max-width: 350px; /* Max width for card */
        margin: 10px;
    }

    /* Different Backgrounds for Cards */
    .card-members {
        background-color: #ffadad; /* Light Red */
    }

    .card-trainers {
        background-color: #ffd6a5; /* Light Orange */
    }

    .card-reports {
        background-color: #caffbf; /* Light Green */
    }

    /* Hover Effect for Card */
    .dashboard-card:hover {
        transform: translateY(-15px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    /* Link inside the card */
    .card-link {
        display: block;
        color: inherit;
        text-decoration: none;
    }

    /* Card Content */
    .card-content {
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    /* Card Title */
    .card-title {
        font-size: 1.6rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 12px;
        text-transform: uppercase; /* Capitalize the text */
    }

    /* Card Description */
    .card-description {
        font-size: 1rem;
        color: #555;
        line-height: 1.5;
        margin-top: 10px;
    }

</style>

@page
@model OficialSliwa.Pages.Account.NajaktywniejsiZawodnicyModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Najaktywniejsi zawodnicy</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            color: #4A90E2;
            font-size: 2rem;
            margin-top: 30px;
        }

        table {
            width: 80%;
            margin-top: 20px;
            border-collapse: collapse;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        table th,
        table td {
            padding: 12px;
            text-align: center;
        }

        table th {
            background-color: #4A90E2;
            color: white;
            font-weight: bold;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

    </style>
</head>
<body>
    <h1>Najaktywniejsi zawodnicy</h1>

    <table>
        <thead>
            <tr>
                <th>Pełne Imię</th>
                <th>Liczba uczestnictw</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var zawodnik in Model.NajaktywniejsiZawodnicy)
            {
                <tr>
                    <td>@zawodnik.Imie</td>
                    <td>@zawodnik.LiczbaObecnosci</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

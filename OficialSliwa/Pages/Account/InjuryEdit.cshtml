@page "/Account/InjuryEdit/{InjuryId}"
@model OficialSliwa.Pages.Account.InjuryEditModel

<h1>Edytuj kontuzję</h1>

<form method="post">
    <div class="form-group">
        <label for="description">Opis Kontuzji</label>
        <textarea id="description" name="Description" class="form-control" required>@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="status">Status Kontuzji</label><br>
        <label class="switch">
            <input type="checkbox" id="status" name="Status" value="true" @(Model.Status ? "checked" : "") />
            <span class="slider round"></span>
        </label>
        <small class="form-text text-muted">Przełącz status kontuzji</small>
    </div>

    <div class="form-group">
        <label for="injuryDate">Data Kontuzji</label>
        <input type="date" id="injuryDate" name="InjuryDate" class="form-control" value="@Model.InjuryDate.ToString("yyyy-MM-dd")" required />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a href="/Account/InjuryRegister" class="btn btn-secondary">Anuluj</a>
</form>

@if (!ModelState.IsValid)
{
    <div class="alert alert-danger mt-2">
        <strong>Błąd:</strong> Wystąpiły problemy przy próbie zapisania zmian.
    </div>
}
